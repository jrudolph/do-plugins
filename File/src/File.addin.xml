<Addin 
	id="File"
	namespace="Do"
	version="1.0"
	name="File"
	description="Indexes files in user-specified directories. Allows you to move, copy, delete, and browse files."
	author="David Siegel"
>
 
	<Runtime>
		<Import assembly="File.dll"/>
	</Runtime>
	
	<Dependencies>
		<Addin id="Core" version="1.0" />
	</Dependencies>
	
	<!-- Extensions included in this assembly -->
	<!-- Sources -->
	<Extension path = "/Do/Action">
	    <Action type="Do.Files.MoveToAction" />
   	</Extension>
    <Extension path = "/Do/Action">
		<Action type="Do.Files.RenameToAction" />
    </Extension>
    <Extension path = "/Do/Action">
      	<Action type="Do.Files.CopyToAction" />
    </Extension>
    <Extension path = "/Do/Action">
       	<Action type="Do.Files.MoveToTrashAction" />
	</Extension>
    <Extension path = "/Do/Action">
		<Action type="Do.Files.CreateEmptyFileAction" />
    </Extension>
    <Extension path = "/Do/Action">
		<Action type="Do.Files.CreateDirectory" />
	</Extension>
</Addin>
