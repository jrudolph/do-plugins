#!/bin/bash

if [ ! -e "./buildrepo/repo" ]; then
	mkdir -p buildrepo/repo
fi

cp */bin/Debug/*.addin.xml buildrepo
cp */bin/Debug/*.dll buildrepo

cd buildrepo

mdtool setup pack `ls | grep addin.xml` -d:./repo
mdtool setup rep-build repo

rm -rf ~/.local/share/gnome-do/local-repo
cp -r repo ~/.local/share/gnome-do/local-repo

cd ..

rm -rf buildrepo
