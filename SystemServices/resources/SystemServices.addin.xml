	category="Community"
	>

	<Runtime>
		<Import assembly="SystemServices.dll"/>
	</Runtime>

	<Dependencies>
		<Addin id="Universe" version="1.0" />
	</Dependencies>

	<Extension path = "/Do/ItemSource">
