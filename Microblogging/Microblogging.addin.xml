<Addin
	id="Microblog"
	namespace="Do"
	version="1.0"
	name="Microblogging"
	description="Allows you to update your microblog right from Do"
	author="Jacob Andreas, Alex Launi"
>

	<Runtime>
		<Import assembly="Microblog.dll"/>
	</Runtime>

	<Dependencies>
		<Addin id="Universe" version="1.0" />
		<Addin id="Platform" version="1.0" />
	</Dependencies>

	<!-- Extensions included in this assembly -->
	<Extension path="/Do/Action">
		<Action type="Microblogging.PostAction" />
	</Extension>

	<Extension path="/Do/ItemSource">
		<ItemSource type="Microblogging.FriendSource" />
	</Extension>
</Addin>
