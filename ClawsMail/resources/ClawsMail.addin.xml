<Addin 
	id="ClawsMail"
	namespace= "Do"
	version="1.0"
	name="ClawsMail"
	description="Actions for ClawsMail and contacts saved in Claws addressbook."
	author="Karol BÄ™dkowski"
	>

	<Runtime>
		<Import assembly="ClawsMail.dll"/>
	</Runtime>

	<Dependencies>
		<Addin id="Universe" version="1.0" />
	</Dependencies>

	<!-- Extensions included in this assembly -->
	<!-- Sources -->
	<Extension path = "/Do/ItemSource">
		<ItemSource type="Claws.ClawsContactsItemSource" />
	</Extension>

	<Extension path = "/Do/Action">
		<Action type="Claws.ClawsActionNewMail" />
		<Action type="Claws.ClawsActionReceiveAll" />
		<Action type="Claws.ClawsActionOnline" />
		<Action type="Claws.ClawsActionOffline" />
		<Action type="Claws.ClawsActionQuit" />
	</Extension>
</Addin>
