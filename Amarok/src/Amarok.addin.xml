<Addin 
	id="Amarok" 
	namespace="Do"
	version="1.0"
	name="Amarok"
	description="Searches and plays Amarok music"
	author="David Siegel"
>
 
	<Runtime>
		<Import assembly="Amarok.dll"/>
	</Runtime>
	
	<Dependencies>
		<Addin id="Universe" version="1.0" />
	</Dependencies>
	
	<!-- Extensions included in this assembly -->
	<!-- Sources -->
	<Extension path = "/Do/ItemSource">
		<ItemSource type="Do.Plugins.Amarok.AmarokMusicItemSource" />
	</Extension>
	<Extension path= "/Do/Action">
		<Action type="Do.Plugins.Amarok.AmarokPlayAction" />
	</Extension>
</Addin>
