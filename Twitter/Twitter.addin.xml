<Addin
	id="Twitter"
	namespace="Do"
	version="2.0"
	name="Twitter"
	description=" Provides 'Tweet' action for updating Twitter status."
	author="Jacob Andreas, Alex Launi"
	>

	<Runtime>
		<Import assembly="Twitter.dll"/>
	</Runtime>

	<Dependencies>
		<Addin id="Do.Universe" version="1.0" />
		<Addin id="Do.Platform" version="1.0" />
	</Dependencies>

	<!-- Extensions included in this assembly -->
	<Extension path="/Do/Action">
		<Action type="Twitter.TweetAction" />
	</Extension>

	<Extension path="/Do/ItemSource">
		<ItemSource type="Twitter.TwitterFriendSource" />
	</Extension>
</Addin>
