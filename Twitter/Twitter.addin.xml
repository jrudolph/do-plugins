<Addin
	id="Twitter"
	namespace="Do"
	version="1.4"
	name="Twitter"
	description=" Provides 'Tweet' action for updating Twitter status."
	author="Jacob Andreas, Alex Launi"
>
 
	<Runtime>
		<Import assembly="Twitter.dll"/>
	</Runtime>
	
	<Dependencies>
		<Addin id="Core" version="1.0" />
	</Dependencies>
	
	<!-- Extensions included in this assembly -->
	<Extension path="/Do/Action">
		<Action type="DoTwitter.TweetAction" />
	</Extension>

	<Extension path="/Do/ItemSource">
		<ItemSource type="DoTwitter.TwitterFriendSource" />
	</Extension>
</Addin>
