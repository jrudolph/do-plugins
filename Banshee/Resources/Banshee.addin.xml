<Addin 
	id="Banshee"
	namespace= "Do"
	version="0.9"
	name="Banshee (beta)"
	description="Control Banshee Media Player playback and Search Collection"
	author="Alex Launi"
	category="Official"
>
 
	<Runtime>
		<Import assembly="Banshee.dll"/>
		<Import assembly="Banshee.CollectionIndexer.dll"/>
	</Runtime>
	
	<Dependencies>
		<Addin id="Universe" version="1.0" />
	</Dependencies>
	
	<!-- Extensions included in this assembly -->

	<!-- Actions -->
	<Extension path = "/Do/Action">
		<Action type = "Banshee.PlayAction" />
		<Action type = "Banshee.PauseAction" />
		<Action type = "Banshee.NextAction" />
		<Action type = "Banshee.PreviousAction" />
	</Extension>
</Addin>
