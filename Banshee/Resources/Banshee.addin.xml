<Addin 
	id="Banshee"
	namespace= "Do"
	version="1.0"
	name="Banshee"
	description="Searches and plays Banshee music"
	author="Alex Launi"
	category="Official"
>
 
	<Runtime>
		<Import assembly="Banshee.dll"/>
		<Import assembly="Banshee.CollectionIndexer.dll"/>
	</Runtime>
	
	<Dependencies>
		<Addin id="Platform" version="1.0" />
		<Addin id="Universe" version="1.0" />
	</Dependencies>
	
	<!-- Extensions included in this assembly -->
	<!-- Itemsources -->
	<Extension path = "/Do/ItemSource">
		<ItemSource type = "Banshee.BansheeItemSource" />
	</Extension>

	<!-- Actions -->
	<Extension path = "/Do/Action">
		<Action type = "Banshee.BansheePlayAction" />
	</Extension>
	<Extension path = "/Do/Action">
		<Action type = "Banshee.BansheeEnqueueAction" />
	</Extension>
	<Extension path = "/Do/Action">
		<Action type = "Banshee.BansheeSearchCollectionAction" />
	</Extension>
</Addin>
