<Addin 
	id="Banshee (beta)"
	namespace= "Do"
	version="0.8"
	name="Banshee"
	description="Control Banshee Media Player and Search Collection"
	author="Alex Launi"
	category="Official"
>
 
	<Runtime>
		<Import assembly="Banshee.dll"/>
	</Runtime>
	
	<Dependencies>
		<Addin id="Platform" version="1.0" />
		<Addin id="Universe" version="1.0" />
	</Dependencies>
	
	<!-- Extensions included in this assembly -->
	<!-- Itemsources -->
	<Extension path = "/Do/ItemSource">
		<ItemSource type = "Banshee.MediaItemSource" />
	</Extension>

	<!-- Actions -->
	<Extension path = "/Do/Action">
		<Action type = "Banshee.PlayAction" />
	</Extension>
	<Extension path = "/Do/Action">
		<Action type = "Banshee.PauseAction" />
	</Extension>
	<Extension path = "/Do/Action">
		<Action type = "Banshee.NextAction" />
	</Extension>
	<Extension path = "/Do/Action">
		<Action type = "Banshee.PlayAction" />
	</Extension>
	<Extension path = "/Do/Action">
		<Action type = "Banshee.EnqueueAction" />
	</Extension>
	<Extension path = "/Do/Action">
		<Action type = "Banshee.SearchCollectionAction" />
	</Extension>
</Addin>
