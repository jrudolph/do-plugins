<Addin
    id="RememberTheMilk"
    namespace= "Do"
    version="1.0"
    name="Remember The Milk"
    description="Allows you to manage tasks in your Remember The Milk account"
    author="Peng Deng"
    >

    <Runtime>
        <Import assembly="RTM.dll"/>
    </Runtime>

    <Dependencies>
        <Addin id="Core" version="1.0" />
    </Dependencies>

    <!-- Extensions included in this assembly -->
    <Extension path="/Do/ItemSource">
        <ItemSource type="Do.Addins.RTM.RTMListItemSource" />
    </Extension>

    <Extension path="/Do/Action">
        <Action type="Do.Addins.RTM.RTMNewTask" />
        <Action type="Do.Addins.RTM.RTMDeleteTask" />
        <Action type="Do.Addins.RTM.RTMCompleteTask" />
        <Action type="Do.Addins.RTM.RTMSetPriority" />
        <Action type="Do.Addins.RTM.RTMSetDue" />
        <Action type="Do.Addins.RTM.RTMMoveTask" />
        <Action type="Do.Addins.RTM.RTMRenameTask" />
        <Action type="Do.Addins.RTM.RTMPostponeTask" />
        <Action type="Do.Addins.RTM.RTMSetRecurrence" />
        <Action type="Do.Addins.RTM.RTMUncompleteTask" />
    </Extension>
</Addin>
